<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_padding">

    <TextView
        android:id="@+id/text_producer_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/my_list_item_default_padding"
        app:drawableLeftCompat="@drawable/baseline_person_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_producer_list_item_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/my_list_item_default_padding"
        app:drawableLeftCompat="@drawable/baseline_email_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_producer_list_item_name" />

    <TextView
        android:id="@+id/text_producer_list_item_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/my_list_item_default_padding"
        app:drawableLeftCompat="@drawable/baseline_public_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_producer_list_item_email" />

</androidx.constraintlayout.widget.ConstraintLayout>